password = "password"

count = 0
while True:
    enter = raw_input("Enter password: ")
    count += 1
    if count == 3:
        print "Too many attempts."
        raise SystemExit("Exiting...")#exit
    else:
        if enter == "password":
            print "Accessing main menu..."
            break #they are in, exit loop
        else:
            print "Password invalid. Try again."

